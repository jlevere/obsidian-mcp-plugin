{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ES5", "ES6", "ES7"],
    "paths": {
      "@types": ["src/types.ts"],
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "jest.config.ts", "esbuild.config.ts", "version-bump.ts"],
  "exclude": ["**/*.test.ts", ".direnv"]
}
